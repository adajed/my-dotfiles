[core]
    editor = vim
    pager = delta

[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracted = cyan

[alias]
    a = add
    m = commit -m
    f = fetch
    fa = fetch --all
    fp = fetch --all --prune

    d = diff

    s = status
    sb = status -s -b

    st = stash
    stp = stash pop
    stl = stash list

    cb = checkout -b
    b = branch
    c = checkout
    p = push
    pf = push --force
    po = push origin
    pof = push --force origin
    pu = pull --ff-only

    r = rebase
    rc = rebase --continue
    ri = rebase interactive

    lo = log --oneline
    lg = log --oneline --graph
    lp = log --graph --pretty=format:'%Cred%h%Creset - %Cgreen(%ad)%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=local

[push]
    default = matching

[delta]
    plus-style = syntax "#013A00"
    minus-style = normal "#400001"
    syntax-theme = Monokai Extended
    line-number = true
    light = true

[interactive]
    diffFilter = delta --color-only

[merge]
    defaultToUpstream = true
    tool = vimdiff
    confilctstyle = diff3

[credential]
    helper = store
