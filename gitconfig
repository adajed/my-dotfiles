[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracted = cyan

[alias]
    a = add
    m = commit -m
    f = fetch
    fa = fetch --all

    d = diff

    s = status
    sb = status -s -b

    cb = checkout -b
    b = branch
    c = checkout
    p = push
    po = push origin
    pu = pull --ff-only

    lo = log --oneline
    lg = log --oneline --graph
